
@{
    ViewBag.Title = "Список контактов";
}

<h2>Контакты</h2>


<table class="table">
    <tr>
        <th>Идентификатор</th>
        <th>ФИО</th>
        <th>Адрес электронной почты</th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.List)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>
                @Html.ActionLink("Изменить", "UpdateContact", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div class="text-center">
    <p><a href="/Home/InsertContact" class="btn btn-primary">Новый контакт &raquo;</a> 
    <a href="/Home/DeleteContact" class="btn btn-danger">Удалить контакт &raquo;</a></p>
</div>
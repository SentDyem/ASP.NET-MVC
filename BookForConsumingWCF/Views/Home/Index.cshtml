
@{
    ViewBag.Title = "Список контактов";
}

<h2>Контакты</h2>

<div class="center-block" style="background-color: #eee; width: 100%;">
    <table class="table table-hover">
        <tr>
            <th>Идентификатор</th>
            <th>ФИО</th>
            <th>Адрес электронной почты</th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.List)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>
                    @Html.ActionLink("Изменить", "Update", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
<div class="text-center">
    <p>
        <a href="/Home/Insert" class="btn btn-primary">Новый контакт &raquo;</a>
        <a href="/Home/Delete" class="btn btn-danger">Удалить контакт &raquo;</a>
    </p>
</div>